.form__group {
  margin-bottom: 10px;

  &--icon {
    position: relative;
  }
}

.form__actions {
  margin-top: 20px;
}

.form__input {
  font-size: inherit;
  font-family: inherit;
  line-height: 1.1;
  border: 1px solid #d5d5d5;
  border-radius: 3px;
  padding: 12px;
  width: 100%;

  &:invalid:not(:focus):not(:placeholder-shown) {
    border-color: #a94442;

    & + .form__error {
      display: block;
      animation: show-error 300ms ease-out forwards;
    }
  }

  &--icon {
    padding-left: 40px;
  }
}

.form__input-icon {
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  height: 20px;
  width: 20px;
  text-indent: 100%;
  white-space: nowrap;
  overflow: hidden;
}

.form__button {
  -webkit-appearance: button;
  cursor: pointer;
  font-size: 14px;
  font-family: inherit;
  border-width: 0;
  background: var(--colorBrand);
  color: var(--colorBrandInvert);
  line-height: 1.1;
  padding: 10px 40px 12px;

  &--fullwidth {
    width: 100%;
  }

  &:hover,
  &:focus {
    background-color: #0f417d;
  }
}

.form__error {
  display: none;
  opacity: 0;
  background: #a94442;
  color: white;
  padding: 8px 10px;
  font-size: 12px;
  white-space: nowrap;
  position: absolute;
  bottom: 50%;
  right: 0;

  &::after {
    content: "";
    top: 100%;
    left: 50%;
    border: solid transparent;
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
    border-top-color: #a94442;
    border-width: 8px;
    margin-left: -8px;
  }
}

@keyframes show-error {
  to {
    opacity: 0.9;
    transform: translate(0, -50%);
  }
}
